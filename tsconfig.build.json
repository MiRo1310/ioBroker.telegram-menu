// Specialized tsconfig to only compile .ts-files in the src dir
{
	"extends": "./tsconfig.json",
	"compilerOptions": {  
		"allowJs": false,
		"checkJs": false,
		"noEmit": false,
		"declaration": false,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["admin/src/components/*"],
			"@/*": ["admin/src/*"],
            "@b/*": ["src/*"]
		},
		"outDir": "./build/",
		"rootDir": "src"
	},
	"include": ["src/**/*.ts"],
	"exclude": []
}
